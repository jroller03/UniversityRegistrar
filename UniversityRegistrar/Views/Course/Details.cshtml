@using UniversityRegistrar.Models;
<!DOCTYPE html>
@{
  Layout = "_Layout";
}

<html>
  <head>
    <meta charset="utf-8">
    <title>University Registrar</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
    <script src="~/js/jquery-3.3.1.js"></script>
  </head>
  <body>
    <div class = "container text-center">
      <h1>University of Washington Registrar</h1>
      <h2>Course: @Model["selectedCourse"].GetName()</h2>

      @if (@Model["courseStudents"].Count != 0)
      {
        <h4>Here are all the students in this course:</h4>
        <ul>
          @foreach (var student in @Model["courseStudents"])
          {
            <li>@student.GetName()</li>
          }
        </ul>
      }
      <h4>Add a student to this category:</h4>
      <form action="/courses/@Model["selectedCourse"].GetId()/students/new" method='post'>
        <label for='student-id'>Select a student</label>
        <select id='student-id' name='student-id' type='text'>
          @foreach (var student in @Model["allStudents"])
          {
            <option value='@student.GetId()'>@student.GetName()</option>
          }
        </select>
        <button type='submit'>Add</button>
      </form>
      <p><a href="/">Return to Main Page</a></p>
    </div>
  </body>
<html>
